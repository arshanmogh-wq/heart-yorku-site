---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Events | HEART">
  <div class="page">
    <section class="page-header">
      <div class="container">
        <h1 class="page-title">Events</h1>
        <p class="page-intro">
          Upcoming events, workshops, and outreach initiatives will be posted here.
          For the latest updates, follow us on Instagram.
        </p>

        <div class="hero-actions" style="margin-top: 14px;">
          <a class="button button-primary" href="/join">Join to get updates</a>
          <a class="button button-secondary" href="https://www.instagram.com/heart_yorku" target="_blank" rel="noreferrer">
            Instagram @heart_yorku
          </a>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="cards cards-3">
          <div class="card">
            <div class="card-accent"></div>
            <h3>Workshops</h3>
            <p>Health education sessions and evidence-based resources to support community wellbeing.</p>
          </div>

          <div class="card">
            <div class="card-accent"></div>
            <h3>Outreach</h3>
            <p>Volunteering and partnerships with community organizations to reduce barriers to care.</p>
          </div>

          <div class="card">
            <div class="card-accent"></div>
            <h3>Advocacy campaigns</h3>
            <p>Awareness initiatives highlighting inequities and supporting inclusive systems.</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
