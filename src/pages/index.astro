---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="page">
    <section class="hero">
      <div class="container">
        <div class="hero-surface">
          <div class="hero-grid">
            <div>
              <div class="hero-kicker">York University • Student-led • Est. 2024</div>

              <h1 class="hero-title animate-fade-up">
                HEART <span class="accent">advocates</span> for health equity.
              </h1>

              <p class="hero-lead animate-fade-up delay-100">
                HEART (Health Equity Advocacy Response Team) advances health equity by addressing systemic,
                social, and economic barriers through advocacy, education, outreach, and community partnerships.
              </p>

              <div class="hero-actions animate-fade-up delay-200">
                <a class="button button-primary" href="/join">Get involved</a>
                <a class="button button-secondary" href="/about">Learn more</a>
              </div>

              <ul class="hero-bullets">
                <li>Community partnerships</li>
                <li>Health education & workshops</li>
                <li>Advocacy campaigns</li>
              </ul>
            </div>

            <div class="hero-media">
              <div class="logo-card">
                <img src="/images/heart-logo.png" alt="HEART logo — York University Est. 2024" loading="eager" />
                <div class="logo-card-caption">
                  <span class="chip chip-blue">Health equity</span>
                  <span class="chip chip-orange">Community action</span>
                </div>
              </div>

              <div class="hero-note">
                <strong>Want updates?</strong> Follow us on Instagram
                <a href="https://www.instagram.com/heart_yorku" target="_blank" rel="noreferrer">@heart_yorku</a>.
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section section-muted">
      <div class="container">
        <h2 class="section-title">Our Mission</h2>
        <p class="section-lead">
          To advocate, educate, and act in response to health inequities by empowering communities,
          supporting evidence-based initiatives, and fostering inclusive healthcare systems.
        </p>

        <div class="cards cards-3">
          <div class="card animate-fade-up delay-200">
            <h3>Advocacy</h3>
            <p>Raise awareness about health disparities and support equity-focused change.</p>
          </div>

          <div class="card animate-fade-up delay-300">
            <h3>Education</h3>
            <p>Share evidence-based resources and promote accessible health learning.</p>
          </div>

          <div class="card animate-fade-up delay-400">
            <div class="card-accent"></div>
            <h3>Community Action</h3>
            <p>Partner with organizations and volunteer to reduce barriers to care.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <h2 class="section-title">What We Do</h2>
        <p class="section-lead">
          HEART turns awareness into action through outreach, education, advocacy, and collaboration.
        </p>

        <div class="cards cards-2">
          <div class="card animate-fade-up delay-100">
            <div class="card-accent"></div>
            <h3>Community engagement</h3>
            <p>Volunteer with local partners and support community-centered initiatives.</p>
          </div>

          <div class="card animate-fade-up delay-200">
            <div class="card-accent"></div>
            <h3>Research & awareness</h3>
            <p>Highlight inequities through data, storytelling, and student-led initiatives.</p>
          </div>

          <div class="card animate-fade-up delay-300">
            <div class="card-accent"></div>
            <h3>Workshops & resources</h3>
            <p>Deliver health education and share inclusive, accessible resources.</p>
          </div>

          <div class="card animate-fade-up delay-400">
            <div class="card-accent"></div>
            <h3>Advocacy campaigns</h3>
            <p>Promote equity-focused change and support marginalized communities.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section section-muted" id="get-involved">
      <div class="container">
        <div class="cta-slab">
          <div>
            <h2 class="cta-title">Get involved</h2>
            <p class="cta-lead">
              HEART welcomes students from all disciplines — public health, nursing, psychology, policy,
              sciences, arts, and more.
            </p>
          </div>

          <div class="cta-actions">
            <a class="button button-primary" href="/join">Join HEART</a>
            <a class="button button-secondary" href="/events">View events</a>
            <a class="button button-tertiary" href="https://www.instagram.com/heart_yorku" target="_blank" rel="noreferrer">
              Follow @heart_yorku
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
