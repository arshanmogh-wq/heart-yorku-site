---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<Nav />

<main class="container">

  <!-- HERO SECTION -->
  <section class="hero">
    <div class="hero-text">
      <div class="badge">York University • Student-Led • Est. 2024</div>

      <h1>
        <span class="blue">H</span><span class="orange">E</span><span class="blue">A</span><span class="orange">R</span><span class="blue">T</span>
      </h1>

      <h2>Health Equity Advocacy Response Team</h2>

      <p>
        HEART is a student-led organization advancing health equity by addressing
        systemic, social, and economic barriers to health.
      </p>

      <div class="buttons">
        <a href="/join" class="btn primary">Join HEART</a>
        <a href="/about" class="btn secondary">Learn More</a>
      </div>
    </div>

    <!-- LOGO PLACEMENT -->
    <div class="hero-logo">
      <img src="/images/heart-logo.png" alt="HEART Logo" />
    </div>
  </section>

  <!-- MISSION -->
  <section class="section">
    <h3>Our Mission</h3>
    <p>
      To advocate, educate, and act in response to health inequities by empowering
      communities and supporting inclusive, evidence-based healthcare initiatives.
    </p>
  </section>

