---
const links = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/join", label: "Join" },
  { href: "/events", label: "Events" },
  { href: "/#get-involved", label: "Get involved" },
];

const path = Astro.url.pathname;
const isActive = (href) => (href === "/" ? path === "/" : path.startsWith(href.replace("/#", "/")));
---

<header class="site-header">
  <div class="container header-inner">
    <a class="brand" href="/" aria-label="HEART home">
      <img class="brand-logo" src="/images/logo.png" alt="HEART logo" loading="eager" />
      <div class="brand-text">
        <span class="brand-name">HEART</span>
        <span class="brand-sub">Health Equity Advocacy Response Team</span>
      </div>
    </a>

    <nav class="site-nav" aria-label="Primary navigation">
      {links.map((l) => (
        <a class:list={["nav-link", isActive(l.href) && "active"]} href={l.href}>
          {l.label}
        </a>
      ))}
      <a class="nav-cta" href="/join">Join</a>
    </nav>
  </div>
</header>
